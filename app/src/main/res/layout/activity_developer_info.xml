<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.rescuex_za.rescuex.DeveloperInfo">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/user_Appbar"/>
    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="55dp"
        android:text="RescueX was developed by RescueX Holdings pty ltd."
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/user_Appbar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView46"
        android:layout_marginTop="12dp"
        android:text="The main objective for developing RescueX is to keep communities safe in any cases where the person feels  he/she is in danger or needs help."
        android:textColor="@color/colorPrimary"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView47"
        android:layout_marginTop="18dp"
        android:text="To know more about RescueX Holdings pty ltd. and how they operate you can visit www.rescuex-za.com"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView48"
        android:layout_marginTop="31dp"
        android:text="follow us on :"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentLeft="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>
