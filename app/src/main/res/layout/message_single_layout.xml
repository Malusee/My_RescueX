<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_layout"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_weight="0"
        android:src="@drawable/my_profile" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message_profile_layout"
        android:text="Hi, there whatsup"
        android:textColor="#ffffff"
        android:id="@+id/messageTextView"
        android:background="@drawable/custom_message_bg_primary"
        android:padding="12dp"
        android:layout_marginLeft="8dp"/>
    <ImageView
        android:id="@+id/message_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/messageTextView"
        android:layout_below="@+id/messageTextView"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/message_profile_layout"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/messageTextView"
        android:layout_toRightOf="@+id/message_profile_layout" />
</RelativeLayout>







